<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>商品一覧(全件)</h2>
        <table class="table table-hover table-inverse">
            <tbody>
              <% @items.each do |item| %>
              <tr><%= image_tag item.get_image(100,100) %></tr>
              <tr><%= item.name %></tr>
              <tr>¥<%= item.price %></tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
