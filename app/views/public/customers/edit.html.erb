<main>
  <p id="notice">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
          <h2>会員情報編集</h2
          <form enctype="multipart/form-data" acceept-charset="UTF-8">
            <%= form_with model: @customer, local:true do |f| %>
            <div class="field">
              <%= f.label "名前" %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>

            <div class="field">
              <%= f.label "フリガナ" %><br />
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>

            <div class="field">
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :postal_code, "郵便番号" %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>

            <div class="field">
              <%= f.label :address, "住所" %><br />
              <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
            </div>

            <div class="field">
              <%= f.label :telephone_number, "電話番号" %><br />
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
            <div class="form-group">
              <%= f.submit "編集内容を保存" %>
            </div>
            <%= link_to "退会する", confirm_unsubscribe_path(@customer) %>
            <% end %>

          </form>
        </div>
      </div>
    </div>
  </p>
</main>