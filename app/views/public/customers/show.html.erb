  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <!-- ユーザーの詳細 -->
        <h2>マイページ</h2>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>氏名</th>
              <th><%= @customer.last_name %> <%= @customer.first_name %></th>
            </tr>
            <tr>
              <th>カナ</th>
              <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= @customer.postal_code %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= @customer.address %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= @customer.telephone_number %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= @customer.email %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <p>注文履歴</p>
          <%= link_to "一覧を見る", orders_path(@customer.id) %>
        </div>
      </div>
    </div>
  </div>
