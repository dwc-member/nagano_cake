<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2><%= @customer.name %>さんの会員詳細</h2>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>会員ID</th>
              <th><%= @customer.id %></th>
            </tr>
            <tr>
              <th>氏名</th>
              <th><%= @customer.last_name %> <%= @customer.first_name %></th>
            </tr>
            <tr>
              <th>フリガナ</th>
              <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= @customer.postal_code %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= @customer.address %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= @customer.postal_code %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= @customer.email %></th>
            </tr>
            <tr>
              <th>会員ステータス</th>
              <th><% if @customer.is_deleted == false %>
                    有効
                    <% else %>
                    退会
                  <% end %>
              </th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "編集する", edit_admin_customer_path(@customer.id) %>
          <%= link_to "注文履歴一覧を見る", admin_root_path %>
        </div>
      </div>
    </div>
  </div>
</main>