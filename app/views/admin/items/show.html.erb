<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">

<div class="col-md-8 offset-md-1">
  <h2>商品詳細</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= image_tag @item.get_image(100,100) %>
        </td>
        <td>商品名</td>
        <td><%= @item.name %></td>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
        <td>税込価格<br>（税抜価格）</td>
        <td><%= @item.price %>*0.1(<%= @item.price %>)円</td>
        <td>販売ステータス</td>
        <td><%= @item.is_active %></td>
         <td>
          <%= link_to "Edit", edit_item_path(@item) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>
</main>